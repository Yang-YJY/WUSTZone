@model LoginViewModel
@{
    ViewBag.Title = "WUSTZone-登陆";
}

<form asp-controller="Account" asp-action="Login" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" placeholder="用户名" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="password" asp-for="Password" class="form-control" placeholder="密码" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">登录</button>
        </div>
    </div>
</form>
